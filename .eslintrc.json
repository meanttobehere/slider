{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/consistent-type-assertions": ["error", {
        "assertionStyle": "never"
    }],
    "linebreak-style": ["error", "windows"],
    "max-len": ["error", {
      "code": 81,
      "ignoreStrings": true
    }]
  }
}
